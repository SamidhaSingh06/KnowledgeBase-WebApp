extends layout

block content
    h1 #{title}
    form(action="/articles/edit/"+art._id, method="post")
        .form-group
            label Title:
            input.form-control(type="text", name="title", value= art.title )

        .form-group
            label Body:
            textarea.form-control(name="body", cols="30", rows="10")= art.body

        input.btn.btn-primary(type="submit", value="Submit")