extends layout

block content
    h1 #{title}
    br
    form(action="/users/login", method="post")
        .form-group
            label Username:
            input.form-control(type="text", name="username")

        .form-group
            label Password:
            input.form-control(type="password", name="password")
        

        input.btn.btn-primary(type="submit", value="Submit")